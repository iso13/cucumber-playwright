{
  "name": "cucumber-playwright",
  "version": "1.0.0",
  "main": "index.js",
  "author": "David Tran",
  "license": "MIT",
  "description": "Cucumber Playwright Automation Framework",
  "scripts": {
    "lint": "npm run lint:ts && npm run lint:gherkin",
    "lint:ts": "eslint 'src/**/*.ts'",
    "lint:gherkin": "npx tsc && node build/scripts/gherkin-lint.js",
    "prepReport": "rimraf reports traces && mkdir -p reports/screenshots reports/accessibility",
    "clean:reports": "rm -rf reports && mkdir -p reports/screenshots reports/performance reports/a11y reports/cucumber reports/playwright reports/html",
    "cucumber": "cucumber-js --config cucumber.mjs --format cucumber-console-formatter --require \"src/steps/**/*.ts\"",
    "cucumber:dev": "npm run clean:reports && cross-env ENV=dev npx cucumber-js --config cucumber.mjs --format cucumber-console-formatter --require 'src/steps/**/*.ts' && npm run report:generate",
    "cucumber:staging": "npm run clean:reports && cross-env ENV=staging cucumber-js --config cucumber.mjs --format cucumber-console-formatter --require 'src/steps/**/*.ts'",
    "generate-feature": "ts-node src/scripts/generateFeatureFile.ts && npx gherkin-lint features/*.feature",
    "validate-k6-report": "cat reports/performance/loadTest.json | jq",
    "build": "npx tsc",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "codegen": "playwright codegen",
    "test:qa": "cross-env ENV=qa npx playwright test",
    "test:dev": "cross-env ENV=dev npx playwright test",
    "test:staging": "cross-env ENV=staging npx playwright test",
    "test": "cross-env ENV=qa npx playwright test",
    "generate:feature": "ts-node src/scripts/generateFeature.ts",
    "report:generate": "npx multiple-cucumber-html-reporter --reportDir reports/html --jsonDir reports/cucumber --reportName 'Consolidated Test Report' --displayDuration true",
    "report:open": "open reports/html/index.html"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@cucumber/cucumber": "11.0.1",
    "@cucumber/html-formatter": "21.7.0",
    "@cucumber/messages": "27.0.0",
    "@cucumber/pretty-formatter": "1.0.1",
    "@playwright/test": "1.48.2",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "4.22.0",
    "@types/k6": "^0.54.1",
    "csv-parse": "^5.6.0",
    "csv-parser": "^3.0.0",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-formatter": "3.1.0",
    "inquirer": "^12.4.1",
    "moment": "^2.30.1",
    "openai": "^4.82.0",
    "pixelmatch": "5.3.0",
    "playwright": "1.48.2",
    "pngjs": "6.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "9.1.0",
    "@types/chai": "^5.0.1",
    "@types/csv-parse": "^1.1.12",
    "@types/fs-extra": "11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jsonfile": "^6.1.4",
    "@types/lodash": "4.17.12",
    "@types/node": "22.8.1",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/prettier": "3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "as-a": "^2.2.7",
    "autoprefixer": "^10.4.20",
    "axe-html-reporter": "2.2.11",
    "axe-playwright": "2.0.3",
    "axios": "1.7.7",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "fs-extra": "11.2.0",
    "gherkin-lint": "^4.2.4",
    "husky": "9.1.6",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.10",
    "open": "10.1.0",
    "path": "^0.12.7",
    "postcss": "^8.5.3",
    "prettier": "3.3.3",
    "read-excel-file": "5.8.6",
    "rimraf": "6.0.1",
    "standard-version": "9.5.0",
    "tailwindcss": "^4.0.9",
    "ts-node": "^10.9.2",
    "tsc-files": "1.1.4",
    "typescript": "5.6.3"
  }
}
